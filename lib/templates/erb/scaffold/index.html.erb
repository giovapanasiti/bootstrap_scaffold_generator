<h1 class="text-center">Listing <%= plural_table_name.titleize %></h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <% attributes.each do |attribute| -%>
        <th><%= attribute.human_name %></th>
      <% end -%>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
        <% attributes.each do |attribute| -%>
          <td><%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <% end -%>
        <td>
          <%= link_to "Show", <%= singular_table_name %>, class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", <%= singular_table_name %>, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New <%= singular_table_name.titleize %>", new_<%= singular_table_name %>_path, class: "btn btn-success mt-3" %>