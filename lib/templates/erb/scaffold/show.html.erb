<h1 class="text-center">Details for <%= singular_table_name.titleize %></h1>

<div class="card">
  <div class="card-body">
    <% attributes.each do |attribute| -%>
      <p><strong><%= attribute.human_name %>:</strong> <%= @<%= singular_table_name %>.<%= attribute.name %> %></p>
    <% end -%>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Edit", edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-warning" %>
  <%= link_to "Back", <%= plural_table_name %>_path, class: "btn btn-secondary" %>
</div>